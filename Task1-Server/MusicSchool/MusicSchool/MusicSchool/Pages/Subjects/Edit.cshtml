@page
@model MusicSchool.Pages.Subjects.EditModel
@{
    ViewData["Title"] = "Edit Subject";
}

<h1>Edit Subject</h1>

<form method="post">
    <div class="form-group" hidden>
        <label asp-for="Subject.SubjectId" class="control-label"></label>
        <input asp-for="Subject.SubjectId" class="form-control" />
        <span asp-validation-for="Subject.SubjectId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Subject.SubjectName" class="control-label"></label>
        <input asp-for="Subject.SubjectName" class="form-control" />
        <span asp-validation-for="Subject.SubjectName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Subject.Description" class="control-label"></label>
        <textarea asp-for="Subject.Description" class="form-control"></textarea>
        <span asp-validation-for="Subject.Description" class="text-danger"></span>
    </div>
    <div class="form-group" style="margin: 5px 0px;">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-page="Index">Back to List</a>
</div>
