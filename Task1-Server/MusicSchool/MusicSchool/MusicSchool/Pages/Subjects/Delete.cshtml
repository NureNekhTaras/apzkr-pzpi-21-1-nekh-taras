@page
@model MusicSchool.Pages.Subjects.DeleteModel
@{
    ViewData["Title"] = "Delete Subject";
}

<h1>Delete Subject</h1>

<h3>Are you sure you want to delete this subject?</h3>
<div>
    <h4>@Model.Subject.SubjectName</h4>
    <p>@Model.Subject.Description</p>
</div>

<form method="post">
    <input type="hidden" asp-for="Subject.SubjectId" />
    <input type="submit" value="Delete" class="btn btn-danger" /> |
    <a asp-page="Index">Back to List</a>
</form>