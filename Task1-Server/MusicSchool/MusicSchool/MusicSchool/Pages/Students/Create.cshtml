@page
@model MusicSchool.Pages.Students.CreateModel
@{
    ViewData["Title"] = "Create Student";
}

<h1>Create Student</h1>

<form method="post">
    <div class="form-group" hidden>
        <label asp-for="Student.StudentId" class="control-label"></label>
        <input asp-for="Student.StudentId" class="form-control" />
        <span asp-validation-for="Student.StudentId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Student.StudentName" class="control-label"></label>
        <input required asp-for="Student.StudentName" class="form-control" />
        <span asp-validation-for="Student.StudentName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Student.Class" class="control-label"></label>
        <input required asp-for="Student.Class" class="form-control" />
        <span asp-validation-for="Student.Class" class="text-danger"></span>
    </div>
    
    <div class="form-group" style="margin: 5px 0px;">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>

