@page
@model MusicSchool.Pages.Grades.DeleteModel
@{
    ViewData["Title"] = "Delete Grade";
}

<h1>Delete Grade</h1>

<h3>Are you sure you want to delete this grade?</h3>

<div>
    <h4>Grade</h4>
    <dl class="row">
        <dt class="col-sm-2">
            Student
        </dt>
        <dd class="col-sm-10">
            @Model.Grade.Student.StudentName
        </dd>
        <dt class="col-sm-2">
            Subject
        </dt>
        <dd class="col-sm-10">
            @Model.Grade.Subject.SubjectName
        </dd>
        <dt class="col-sm-2">
            Grade
        </dt>
        <dd class="col-sm-10">
            @Model.Grade.GradeValue
        </dd>
        <dt class="col-sm-2">
            Date
        </dt>
        <dd class="col-sm-10">
            @Model.Grade.DateTime.ToString("yyyy-MM-dd")
        </dd>
    </dl>
</div>

<form method="post">
    <input type="hidden" asp-for="Grade.GradeId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>
