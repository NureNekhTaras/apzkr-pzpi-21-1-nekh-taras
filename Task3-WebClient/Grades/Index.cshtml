@page
@model MusicSchool.Pages.Grades.IndexModel
@{
    ViewData["Title"] = "Grades";
}

<h1>Grades</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">Add New Grade</a>
</p>

<form method="get">
    <div class="form-group">
        <label asp-for="StudentId" class="control-label">Student</label>
        <select asp-for="StudentId" class="form-control" asp-items="Model.Students">
            <option value="">All Students</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="SubjectId" class="control-label">Subject</label>
        <select asp-for="SubjectId" class="form-control" asp-items="Model.Subjects">
            <option value="">All Subjects</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Date" class="control-label"></label>
        <input asp-for="Date" class="form-control" type="date" />
    </div>
    <input type="submit" value="Filter" style="margin: 5px 0px;"  class="btn btn-primary" />
    <a asp-page="Index" style="margin: 5px 0px;" class="btn btn-secondary">Clear</a>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Student</th>
            <th>Subject</th>
            <th>Grade</th>
            <th>Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var grade in Model.Grades)
        {
            <tr>
                <td>@grade.Student.StudentName</td>
                <td>@grade.Subject.SubjectName</td>
                <td>@grade.GradeValue</td>
                <td>@grade.DateTime.ToString("yyyy-MM-dd")</td>
                <td>
                    <a asp-page="Edit" asp-route-id="@grade.GradeId" class="btn btn-secondary">Edit</a>
                    <a asp-page="Delete" asp-route-id="@grade.GradeId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
